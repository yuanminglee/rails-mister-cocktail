<h1 class="d-inline-block"><%= @cocktail.name %></h1>
<%= link_to edit_cocktail_path, class: "align-top text-reset" do %>
  <i class="fas fa-edit"></i>
<% end %>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Ingredient</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cocktail.doses.each do |dose| %>
      <tr>
        <td><%= dose.ingredient.name %></td>
        <td><%= dose.description %></td>
        <td><%= link_to 'Delete ingredient', dose_path(dose), method: 'delete', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
