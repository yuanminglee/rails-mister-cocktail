<%= content_tag :div, class: "nested-fields", data: { new_record: form.object.new_record? } do %>
  <div class="form-group">
    <div class="form-row">
      <div class="col">
        <%= form.association :ingredient, collection: Ingredient.all.order(:name), prompt: "Add an ingredient", input_html: { class: 'form-control select2' } %>
      </div>
      <div class="col">
        <%= form.input :description %>
      </div>
      <small><%= link_to "Remove", "#", data: { action: "nested-form#remove_association" } %></small>
    </div>
  </div>

  <%= form.hidden_field :_destroy %>
<% end %>
